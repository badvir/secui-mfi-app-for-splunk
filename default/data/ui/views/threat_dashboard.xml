<form>
  <label>Threat Dashboard</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="dashboard_time_tn" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>rt-1h</earliest>
        <latest>rt</latest>
      </default>
    </input>
    <input type="dropdown" token="dashboard_host_tn" searchWhenChanged="true">
      <label>Host</label>
      <search>
        <query>eventtype=mfi_ipsddos | dedup host | table host</query>
        <earliest>@d</earliest>
        <latest>now</latest>
      </search>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <default>*</default>
      <initialValue>*</initialValue>
      <choice value="*">Total</choice>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <search>
          <query>host=$dashboard_host_tn$ eventtype=mfi_ipsddos | fillnull value="" | timechart sum(detects)</query>
          <earliest>$dashboard_time_tn.earliest$</earliest>
          <latest>$dashboard_time_tn.latest$</latest>
        </search>
        <option name="colorBy">trend</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">inverse</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
        <option name="drilldown">all</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="underLabel">Current Detections</option>
      </single>
    </panel>
    <panel>
      <single>
        <search>
          <query>host=$dashboard_host_tn$ eventtype=mfi_ipsddos AND action="탐지" OR action="detect"  | fillnull value="" | stats sum(detects) as sum count(count) | eval sum=if(isnull(sum),0,sum)</query>
          <earliest>$dashboard_time_tn.earliest$</earliest>
          <latest>$dashboard_time_tn.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
        <option name="rangeValues">[0,30,70,100]</option>
        <option name="trendInterval">-1h</option>
        <option name="underLabel">Total Detections</option>
      </single>
    </panel>
    <panel>
      <single>
        <search>
          <query>host=$dashboard_host_tn$ eventtype=mfi_ipsddos AND action="차단" OR action="Block" |  fillnull value="" | stats sum(detects) as sum count(count) | eval sum=if(isnull(sum),0,sum)</query>
          <earliest>$dashboard_time_tn.earliest$</earliest>
          <latest>$dashboard_time_tn.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
        <option name="rangeColors">["0x65a637","0x6db7c6","0xf7bc38","0xf58f39","0xd93f3c"]</option>
